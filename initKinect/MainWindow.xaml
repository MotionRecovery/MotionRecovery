<Window x:Class="motionRecovery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menu" 
        Height="768" Width="1366" 
        Loaded="MainWindow_Loaded"
        Closing="MainWindow_Closing">

    <Grid>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0">
            <TextBlock Text="Kinect Status: " FontSize="16" />
            <TextBlock Text="{Binding StatusText}" FontSize="16" />
        </StackPanel>

        <TextBlock Text="{Binding UserPositionStatus}" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="16" Margin="0,0,80,40" />
        <Viewbox Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="700" Height="600">
            <Image Source="{Binding ImageSource}" Stretch="UniformToFill" />
        </Viewbox>
    </Grid>
</Window>
